{
  "extends": "./tsconfig.json",
  "include": ["dist/src"],
  "exclude": [],
  "compilerOptions": {
    "rootDir": "./dist/src",
    "paths": {
      "lithic/_shims/*": ["dist/src/_shims/*.node"],
      "lithic": ["dist/src/index.ts"],
      "lithic/*": ["dist/src/*"],
      "digest-fetch": ["./typings/digest-fetch"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true
  }
}
